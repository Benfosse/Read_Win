<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bookmanager.chalmers.edu.readwin.PairQuestionFragment">

    <TextView
        android:id="@+id/pairQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title_Book1"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="11dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold|italic">
    </TextView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/next_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:backgroundTint="#384bd8"
        android:src="@drawable/ic_arrow_forward_black_24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/prev_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        app:backgroundTint="#384bd8"
        android:src="@drawable/ic_arrow_back_black_24dp"/>


    <TextView
        android:id="@+id/pairQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pairQuestionTitle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="11dp"
        android:text="Question 2: I don't know for the question 2!"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>

    <RadioButton
        android:id="@+id/option1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pairQuestion"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="1."
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/optionA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pairQuestion"
        android:layout_alignBaseline="@+id/option1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="a)"
        android:padding="5dp" />


    <RadioButton
        android:id="@+id/option2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="2."
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/optionB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pairQuestion"
        android:layout_alignBaseline="@+id/option2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="b)"
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/option3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="3."
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/optionC"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pairQuestion"
        android:layout_alignBaseline="@+id/option3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="c)"
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/option4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="4."
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/optionD"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pairQuestion"
        android:layout_alignBaseline="@+id/option4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="d)"
        android:padding="5dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option4"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="1.  a)\n2.  b)\n3.  c)\n4.  d)"/>

    <Button
        android:id="@+id/finishedWithQuestionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:visibility="gone"/>

</RelativeLayout>
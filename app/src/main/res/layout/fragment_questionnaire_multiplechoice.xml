<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bookmanager.chalmers.edu.readwin.MultipleQuestionFragment">

    <TextView
        android:id="@+id/multipleQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title_Book1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="11dp"
        android:textSize="30sp"
        android:textStyle="bold|italic">
    </TextView>


    <TextView
        android:id="@+id/multipleQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_below="@+id/multipleQuestionTitle"
        android:layout_marginTop="20dp"
        android:text="Question 1"
        android:textStyle="bold"
        android:textSize="20dp">
    </TextView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/next_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:backgroundTint="#384bd8"
        android:src="@drawable/ic_arrow_forward_black_24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/prev_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        app:backgroundTint="#384bd8"
        android:src="@drawable/ic_arrow_back_black_24dp"/>


    <TextView
        android:id="@+id/question_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-/-"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="478dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multipleQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="RadioButton"
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="RadioButton"
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="RadioButton"
        android:padding="5dp" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:checked="true"
        android:background="@drawable/question_button_background"
        android:button="@android:color/transparent"
        android:text="RadioButton"
        android:padding="5dp"
        />

    <Button
        android:id="@+id/finishedWithQuestionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:visibility="gone"/>

</RelativeLayout>

